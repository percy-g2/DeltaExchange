<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- default color of ANY text (menu items, labels, etc. ) unless color attribute is overridden -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>

        <!-- color of the default background -->
        <item name="android:windowBackground">@color/backgroundColor</item>

    </style>


    <style name="AppTheme.TitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:paddingTop">@dimen/padding_default_2x</item>
        <item name="android:paddingBottom">@dimen/padding_default_2x</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppTheme.TickerTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_default_05x</item>
        <item name="android:paddingBottom">@dimen/padding_default_05x</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.TableLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">1</item>
    </style>

    <style name="AppTheme.TableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.TableTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_table_title_text</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

</resources>
